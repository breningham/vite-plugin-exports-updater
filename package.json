{
  "name": "vite-plugin-exports-updater",
  "version": "2.1.0",
  "description": "A Vite plugin that automatically updates your package.json exports map after a build.",
  "license": "MIT",
  "author": "Brendan Ingham <brendan@ingham.dev>",
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/breningham/vite-plugin-exports-updater",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc",
    "lint": "eslint .",
    "test": "vitest",
    "prepublishOnly": "pnpm build",
    "release": "semantic-release"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "exports",
    "package.json"
  ],
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "eslint": "9.33.0",
    "globals": "16.3.0",
    "semantic-release": "^24.2.7",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0",
    "vite": "7.1.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0",
  "volta": {
    "node": "24.6.0",
    "pnpm": "10.14.0"
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
